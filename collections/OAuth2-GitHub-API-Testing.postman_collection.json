				{
					"listen": "test",
					"script": {
						"exec": [
							"// Test 1: Status code is 200\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// Test 2: Response is an array\r",
							"pm.test(\"Response is an array\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData).to.be.an('array');\r",
							"});\r",
							"\r",
							"// Test 3: Response contains repositories\r",
							"pm.test(\"At least one repository returned\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.length).to.be.above(0);\r",
							"});\r",
							"\r",
							"// Test 4: Each repo has required fields\r",
							"pm.test(\"Repositories have required fields\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    jsonData.forEach(function(repo) {\r",
							"        pm.expect(repo).to.have.property('name');\r",
							"        pm.expect(repo).to.have.property('full_name');\r",
							"        pm.expect(repo).to.have.property('private');\r",
							"        pm.expect(repo).to.have.property('html_url');\r",
							"    });\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
